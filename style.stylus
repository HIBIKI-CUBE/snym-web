vendor(prop, args)
  {prop} args
  -webkit-{prop} args
  -moz-{prop} args

vendorarg(prop, arg)
  {prop} arg
  {prop} -webkit-+arg
  {prop} -moz-+arg
// ########################################
html,body
  margin 0
  scroll-behavior smooth
  background-color var(--bg)
  color var(--main-text-color)
  font-family -apple-system, 'BlinkMacSystemFont', 'Hiragino Kaku Gothic ProN', 'Ã£Æ’Â¡Ã£â€šÂ¤Ã£Æ’ÂªÃ£â€šÂª', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif

a
  text-decoration: none

header
  position fixed
  top 0
  display flex
  align-items center
  justify-content space-between
  width calc(100vw - var(--base-size) * 2)
  height var(--base-size)
  padding calc(var(--base-size) / 4) var(--base-size)
  color var(--ui-text-color)
  background-color var(--ui-bg)
  vendor(backdrop-filter, blur(10px))
  z-index 1000

.header_logo
  height 100%

.header_title
  margin 0

.header_button
  margin 0

main
  margin-top calc(var(--base-size) * 1.5)

.main_works_hero_image
  width 100vw
  height calc(var(--base-size) * 10)
  object-fit cover