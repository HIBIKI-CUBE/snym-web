@charset "utf-8";

:root
  --base-size 7vh
  --font-size-large 2vw
  --font-size-medium 2vw
  --font-size-small 2vw
  --accent-color rgba(255,200,0,1)
  --ui-over-text-color rgba(0,0,0,1)
  --ui-over-bg rgba(255,255,255,1)
  --ui-text-color #FFF
  --ui-bg #c3c3c3
  @supports(backdrop-filter blur(10px)) or (-webkit-backdrop-filter blur(10px)) or (-moz-backdrop-filter blur(10px))
    --ui-bg rgba(200,200,200,0.5)
  --ui-bg-hover rgba(255,255,255,1)
  --ui-bg-focus rgba(255,255,255,1)
  --main-text-color rgba(255,255,255,1)
  --main-bg rgba(255,255,255,1)
  --bg rgba(0,0,0,1)
  //--------------^^refactored^^-------------------

@media screen and (max-width 680px)
  :root
    --base-size 12vw

